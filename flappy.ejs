<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Clappy berd</title>
        <style>
            canvas {
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                position: absolute;
            }
        </style>
    </head>
    <body>
        <canvas id="canv"></canvas>
        <script>
            let pos = {x:0,y:0}
            let vy = 2
            let vispipes = []
            const canv = document.getElementById("canv")
            const ctx = canv.getContext("2d")
            canv.width = window.innerWidth
            canv.height = window.innerHeight
            function loop(){
                ctx.fillStyle = "skyblue"
                ctx.fillRect(0,0,canv.width,canv.height)
                ctx.fillStyle = "yellow"
                ctx.beginPath()
                ctx.arc(100,pos.y,20,0,Math.PI*2)
                ctx.fill()
                pos.y += vy
                vy += 0.1
                if(pos.y > canv.height){ alert(":(");pos.y = 0; vy = 2; vispipes = []}
                vispipes.forEach(p => {
                    ctx.fillStyle = "green"
                    ctx.fillRect(p.x,0,50,p.holepos)
                    ctx.fillRect(p.x,p.holepos+150,50,canv.height)
                    p.x -= 2
                    if(p.x + 50 < 0){
                        vispipes.shift()
                    }
                    if (120 > p.x && 80 < p.x + 50){
                        if (pos.y-20 < p.holepos || pos.y+20 > p.holepos + 150){
                            alert(":(")
                            pos = {x:0,y:0}
                            vy = 2
                            vispipes = []
                        }
                    }
                })
                if (vispipes.length < innerWidth / 300 + 2) {
                    let lastpipe = vispipes[vispipes.length - 1]
                    let newx = lastpipe ? lastpipe.x + 500 : 500
                    let newholepos = Math.random() * (canv.height - 200)
                    vispipes.push({x: newx, holepos: newholepos})

                }
                requestAnimationFrame(loop)
            }
            loop()
            window.onresize = function(){
                canv.width = window.innerWidth
                canv.height = window.innerHeight
            }
            window.onkeydown = function(e){
                if(e.key === " ") vy = -3
            }
        </script>
    </body>
</html>